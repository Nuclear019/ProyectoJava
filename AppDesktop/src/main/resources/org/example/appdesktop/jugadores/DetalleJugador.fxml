<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.appdesktop.controller.DetalleJugadorController" spacing="10">
    <children>
        <HBox alignment="TOP_RIGHT" spacing="10">
            <Button fx:id="editJugadorButton" text="Editar Jugador" />
        </HBox>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <ImageView fx:id="jugadorFoto" fitHeight="200" fitWidth="200" />
            <Button fx:id="editImageButton" text="✏️" visible="false" />
        </HBox>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Nombre:" />
            <Text fx:id="jugadorNombre" />
            <TextField fx:id="jugadorNombreField" visible="false" />
        </HBox>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Apellido:" />
            <Text fx:id="jugadorApellido" />
            <TextField fx:id="jugadorApellidoField" visible="false" />
        </HBox>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Posición:" />
            <Text fx:id="jugadorPosicion" />
            <TextField fx:id="jugadorPosicionField" visible="false" />
        </HBox>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Altura:" />
            <Text fx:id="jugadorAltura" />
            <TextField fx:id="jugadorAlturaField" visible="false" />
        </HBox>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Peso:" />
            <Text fx:id="jugadorPeso" />
            <TextField fx:id="jugadorPesoField" visible="false" />
        </HBox>
        <VBox spacing="5" alignment="CENTER_RIGHT">
            <Label text="Draft" styleClass="card-title" />
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Año:" />
                <Text fx:id="jugadorAnoDraft" />
                <TextField fx:id="jugadorAnoDraftField" visible="false" />
                <Button fx:id="editAnoDraftButton" text="✏️" visible="false" />
            </HBox>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Ronda:" />
                <Text fx:id="jugadorRondaDraft" />
                <TextField fx:id="jugadorRondaDraftField" visible="false" />
                <Button fx:id="editRondaDraftButton" text="✏️" visible="false" />
            </HBox>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Número:" />
                <Text fx:id="jugadorNumeroDraft" />
                <TextField fx:id="jugadorNumeroDraftField" visible="false" />
                <Button fx:id="editNumeroDraftButton" text="✏️" visible="false" />
            </HBox>
        </VBox>
        <HBox alignment="BOTTOM_RIGHT">
            <Button fx:id="confirmButton" text="Confirmar" visible="false" />
        </HBox>
    </children>
</VBox>
